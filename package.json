{
  "name": "YADE",
  "version": "1.0.0",
  "description": "A diagram editor",
  "main": "build/index.js",
  "repository": "git@github.com:amblafont/graph-editor-web.git",
  "author": "amblaf <chaster_killer@hotmail.fr>",
  "license": "MIT",
  "scripts": {
    "start": "yarn compile && electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "compile": "tsc && copyfiles -f preload.js src/index.html build"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.4",
    "@electron-forge/maker-deb": "^6.0.4",
    "@electron-forge/maker-zip": "^6.0.4",
    "@electron-forge/publisher-github": "^6.0.4",
    "copyfiles": "^2.4.1",
    "electron": "^22.1.0",
    "typescript": "^5.1.6"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "ignore": [
          "^/src$",
          "^/ignore$",
          "^/elm-stuff$",
          "^/elm.json$",
          "^/tools$"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "linux"
          ],
          "config": {}
        },
        {
          "name": "@electron-forge/maker-deb",
          "platforms": [
            "linux"
          ],
          "config": {
            "options": {
              "name": "coreact-yade"
            }
          }
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "platforms": [
            "linux"
          ],
          "config": {
            "repository": {
              "owner": "amblafont",
              "name": "graph-editor-web"
            },
            "draft": true
          }
        }
      ]
    }
  },
  "dependencies": {
    "@stdlib/utils-escape-regexp-string": "^0.0.9",
    "@types/argparse": "^2.0.10",
    "@types/n-readlines": "^1.0.3",
    "argparse": "^2.0.1",
    "electron-prompt": "^1.7.0",
    "n-readlines": "^1.0.1",
    "tmp": "^0.2.1"
  }
}
